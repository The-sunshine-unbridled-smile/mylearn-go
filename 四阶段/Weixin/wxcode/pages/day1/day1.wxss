.header{
  display:flex;
  border-left:3px solid limegreen;
  justify-content: space-between;
  padding:15rpx;
  margin:30rpx 0;
}
.myheader{
  color:red;
}

.text-all{
  font-size:16px;
  color:limegreen
}

.content{
  display:flex;
  flex-wrap:wrap;
  justify-content: space-around;
}

.content-item{
  /* width:46%; */
  flex-basis:47%;
  position:relative;
}

.content-item image{
  width:100%;
  height:240rpx;
}
.content-item-text{
  background-color:black;
  opacity:0.7;
  color:white;
  width:100%;
  position:absolute;
  bottom:10rpx;
  height:50rpx;
  font-size:14px;
  line-height:50rpx;
  text-indent:5px;
}